<div class="login-page container-fluid">
  <div class="overlay-gradient"></div>
  <div class="login-page-wrapper row">
    <div class="left-col col-sm-12 col-md-5 offset-md-1 col-xl-4 offset-xl-2">
      <div class="mon-logo">
        <img src="/assets/images/mon.png" alt="mon-logo" />
      </div>
      <div class="page-title">
        <strong>Вход към</strong>
        <h1>НЕИСПУО</h1>
      </div>
    </div>
    <div class="right-col col-sm-12 col-md-5 col-xl-4">
      <div class="mdc-card" style="background-color: white">
        <div class="form-wrapper">
          <form
            autocomplete="off"
            action="/interaction/<%= uid %>/login"
            method="post"
          >
            <div class="form-title">
              <div class="mon-logo">
                <img src="/assets/images/mon-logo.png" alt="" />
              </div>
              <h2>НЕИСПУО</h2>
              <p>Влез в своя профил</p>
            </div>

            <label
              class="mdc-text-field mdc-text-field--filled"
              style="width: auto; display: flex"
            >
              <span class="mdc-text-field__ripple" flex></span>
              <span class="mdc-floating-label" id="emailLabel">Имейл</span>
              <input
                type="email"
                class="mdc-text-field__input"
                aria-labelledby="emailLabel"
              />
              <span class="mdc-line-ripple"></span>
            </label>

            <label
              class="mdc-text-field mdc-text-field--filled"
              style="width: auto; display: flex"
            >
              <span class="mdc-text-field__ripple"></span>
              <span class="mdc-floating-label" id="passwordLabel">Парола</span>
              <input
                type="text"
                class="mdc-text-field__input"
                aria-labelledby="passwordLabel"
              />
              <span class="mdc-line-ripple"></span>
            </label>

            <div style="width: auto; display: block">
              <span id="errorMsg" class="error-msg" style="display: none">
                <i class="fa fa-times-circle"></i>
                Невалиден имейл или парола
              </span>
            </div>
            <div class="login-actions">
              <div class="mdc-form-field">
                <div class="mdc-checkbox">
                  <input
                    type="checkbox"
                    class="mdc-checkbox__native-control"
                    id="rememberMe"
                  />
                  <div class="mdc-checkbox__background">
                    <svg class="mdc-checkbox__checkmark" viewBox="0 0 24 24">
                      <path
                        class="mdc-checkbox__checkmark-path"
                        fill="none"
                        d="M1.73,12.91 8.1,19.28 22.79,4.59"
                      />
                    </svg>
                    <div class="mdc-checkbox__mixedmark"></div>
                  </div>
                  <div class="mdc-checkbox__ripple"></div>
                </div>
                <label for="rememberMe">Запомни ме</label>
              </div>
              <a mat-button class="mat-small" routerLink="#" target="_blank"
                >Забравена парола?</a
              >
            </div>
            <div class="submit-btn-wrapper">
              <div class="mdc-touch-target-wrapper">
                <button class="mdc-button mdc-button--raised">
                  <div class="mdc-button__ripple"></div>
                  <span class="mdc-button__label">Вход</span>
                  <div class="mdc-button__touch"></div>
                </button>
              </div>
              <div class="mat-small">
                <span>Общи условия и правила. </span>
                <a class="with-icon" routerLink="#" target="_blank"
                  >Научи повече
                  <i class="material-icons" style="margin-top: 2px"
                    >chevron_right</i
                  ></a
                >
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
<script type="text/javascript">
  var currentURL = window.location.href.includes("error");
  var MDCTextField = mdc.textField.MDCTextField;
  var MDCCheckbox = mdc.checkbox.MDCCheckbox;
  var MDCRipple = mdc.ripple.MDCRipple;
  //Set the error div if URL contains error
  if (currentURL) {
    var error = document.querySelector("#errorMsg");
    error.setAttribute("style", "display:block;");
  }

  var labelArr = [];
  document
    .querySelectorAll("label")
    .forEach((label) => labelArr.push(new MDCTextField(label)));

  var checkbox = new MDCCheckbox(document.querySelector(".mdc-checkbox"));
  labelArr.forEach(function (label) {
    if (label) {
      label.input = checkbox;
    }
  });
  var buttonRipple = new MDCRipple(document.querySelector(".mdc-button"));
  console.log(labelArr);
</script>
